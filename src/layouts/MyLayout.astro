---
const { title } = Astro.props;
const ogImage = new URL('/img/og_image.png', Astro.url)
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta property="og:title" content="Voidfoxtamcin's Website" />
    <meta property="og:description" content="Voidfoxtamcin's Website" />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:type" content="website" />

    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-white">
    <slot />
  </body>
</html>
