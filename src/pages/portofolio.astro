---
import MyLayout from "@/layouts/MyLayout.astro";
import { Image } from "astro:assets";
import { GET } from "@/pages/api/gallery.json.ts";
import type { Images as ImagesType, Image as ImageType } from "@/lib/types";

let response = await GET(Astro);
const data: ImagesType = await response.json();
---

<MyLayout title="My Portofolio!">
  <div class="container mx-auto border-x-2 border-black">
    <div class="py-16">
      <hr class="border-t-2 border-black" />
      <h1 class="text-2xl md:text-5xl font-black italic text-center mt-4">
        ! FINISHED ART !
      </h1>
      <hr class="border-t-2 border-black mt-4" />
    </div>

    <div class="pb-16">
      <div class="columns-1 sm:columns-2 md:columns-3 lg:columns-4 px-4">
        {
          data.images.map((img: ImageType, index: number) => (
            <Image
              src={"/img/" + img.src}
              alt={"protofolio image " + index + 1}
              width={256}
              height={128}
              loading={"lazy"}
              quality={"low"}
              class="mb-4 border-2 border-black custom-shadow min-w-full"
            />
          ))
        }
      </div>
      <div class="mt-8">
        <a
          href="/"
          class="block w-full px-4 py-3 text-center font-semibold bg-black md:text-xl text-white"
          >GO BACK</a
        >
      </div>
    </div>
  </div>
</MyLayout>

<style>
  .custom-shadow {
    box-shadow: 0.2rem 0.2rem 0rem #000000;
  }
</style>
